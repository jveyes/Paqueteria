# PAQUETERIA v3.5 - Variables de Entorno
# Copia este archivo como .env y configura tus valores

# CONFIGURACIÓN DE LA APLICACIÓN
APP_NAME=PAQUETES EL CLUB
APP_VERSION=3.5.0
DEBUG=True
ENVIRONMENT=development
SECRET_KEY=your-super-secret-key-here

# BASE DE DATOS - AWS RDS POSTGRESQL
DATABASE_URL=postgresql://username:password@host:port/database_name
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=paqueteria
POSTGRES_HOST=your-rds-endpoint.amazonaws.com
POSTGRES_PORT=5432

# REDIS - CACHE Y MESSAGE BROKER
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=your_redis_password
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# CONFIGURACIÓN SMTP - EMAIL
SMTP_HOST=your-smtp-host.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_NAME=PAQUETERIA EL CLUB
SMTP_FROM_EMAIL=your-email@domain.com

# CONFIGURACIÓN SMS - LIWA.CO
LIWA_API_KEY=your_liwa_api_key
LIWA_ACCOUNT=your_liwa_account
LIWA_PASSWORD=your_liwa_password
LIWA_AUTH_URL=https://api.liwa.co/v2/auth/login
LIWA_FROM_NAME=PAQUETES EL CLUB

# CONFIGURACIÓN DE TARIFAS
BASE_STORAGE_RATE=1000
BASE_DELIVERY_RATE=1500
NORMAL_PACKAGE_MULTIPLIER=1500
EXTRA_DIMENSION_PACKAGE_MULTIPLIER=2000
CURRENCY=COP

# CONFIGURACIÓN DE ARCHIVOS
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# CONFIGURACIÓN DE LA EMPRESA
COMPANY_NAME=PAQUETES EL CLUB
COMPANY_ADDRESS=Your Company Address
COMPANY_PHONE=your-phone-number
COMPANY_EMAIL=your-company-email@domain.com

# CONFIGURACIÓN DE MONITOREO
GRAFANA_PASSWORD=your_grafana_password
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# CONFIGURACIÓN DE LOGS
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# CONFIGURACIÓN DE AUTENTICACIÓN
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CONFIGURACIÓN DE PWA
PWA_NAME=PAQUETES EL CLUB
PWA_SHORT_NAME=Paquetes
PWA_DESCRIPTION=Sistema de gestión de paquetería
PWA_THEME_COLOR=#3B82F6
PWA_BACKGROUND_COLOR=#FFFFFF
